# Frontend Environment Configuration for Docker
# Copy this to .env.docker or set these variables when running the container

# API Configuration
# For local development
# VITE_BE_URL=http://localhost:8000

# For Docker environment (backend service name from docker-compose)
VITE_BE_URL=http://backend:8000

# For production (use your actual backend domain)
# VITE_BE_URL=https://api.cleanease.com

# App Mode
VITE_MODE=production

# Analytics (optional)
VITE_ENABLE_ANALYTICS=false

# Logging
VITE_ENABLE_DEBUG=false

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_TWO_FACTOR_AUTH=false
